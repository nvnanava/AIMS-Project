<script>
    function openEditUserModal(button) {
        const row = button.closest("tr");
        const cells = row.getElementsByTagName("td");

        // Get user data from the row
        const name = cells[1].innerText.trim();
        const email = cells[2].innerText.trim();
        const role = cells[3].innerText.trim();
        const status = cells[4].innerText.trim();
        const separationDate = cells[5].innerText.trim();

        // Fill modal fields
        document.getElementById("editUserName").value = name;
        document.getElementById("editUserEmail").value = email;
        document.getElementById("editUserRole").value = role;
        document.getElementById("editUserStatus").value = status;
        document.getElementById("editUserSeparationDate").value = separationDate;
        document.getElementById("editUserModal").classList.add("show");
    }

    function closeEditUserModal() {
        document.getElementById("editUserModal").classList.remove("show");
    }

    // Simulate save
    function saveUserEdit(event) {
        event.preventDefault();

        const name = document.getElementById("editUserName").value;
        const email = document.getElementById("editUserEmail").value;
        const role = document.getElementById("editUserRole").value;
        const status = document.getElementById("editUserStatus").value;
        const separationDate = document.getElementById("editUserSeparationDate").value;


        const rows = document.querySelectorAll(".user-row");
        rows.forEach(row => {
            const emailCell = row.cells[2];
            if (emailCell.innerText.trim() === email) {
                row.cells[1].innerText = name;
                row.cells[3].innerText = role;
                row.cells[4].innerHTML = `<span class="badge ${status.toLowerCase()}">${status}</span>`;
                row.cells[5].innerText = separationDate || " ";
            }
        });

        closeEditUserModal();
    }
</script>
