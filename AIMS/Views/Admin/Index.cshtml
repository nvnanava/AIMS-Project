            </tr>
        </thead>
        <tbody>
            @{
                var users = new[]
                {
                    new { Name = "John Smith", Email = "john.smith@email.com", Role = "Admin", Status = "Active" },
                    new { Name = "Jane Doe", Email = "jane.doe@email.com", Role = "User", Status = "Inactive" },
