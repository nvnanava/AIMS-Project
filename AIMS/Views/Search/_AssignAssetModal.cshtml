<!-- Assign Asset Modal -->
<div class="modal fade" id="assignAssetModal" tabindex="-1"
     aria-labelledby="assignAssetLabel" aria-hidden="true"
     data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-fullscreen-sm-down">
        <div class="modal-content aimsds-shell">

            <!-- Header -->
            <div class="modal-header aimsds-header">
                <h5 class="modal-title" id="assignAssetLabel">Assign an Asset</h5>
                <button type="button" class="btn-close aimsds-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body aimsds-body">
                <!-- Selected asset summary (shown when opened from üë§) -->
                <div id="selectedAssetBox" class="mb-3" style="display:none;">
                    <label class="form-label mb-1 fw-bold">Selected Asset</label>
                    <div class="p-2 border rounded bg-white">
                        <div><strong>Name:</strong> <span id="selAssetName">‚Äî</span></div>
                        <div><strong>Tag #:</strong> <span id="selAssetTag">‚Äî</span></div>
                        <div><strong>Kind:</strong> <span id="selAssetKind">‚Äî</span></div>
                    </div>
                </div>

                <form id="assignAssetForm" novalidate>
                    <!-- Select User -->
                    <div class="mb-3">
                        <label for="assignUserSearchInput" class="form-label fw-bold">Select User</label>

                        <div class="aims-userpicker" id="userPicker">
                            <!-- Navbar-style search bar -->
                            <div class="search-container aims-userpicker__search">
                                <input
                                    type="search"
                                    id="assignUserSearchInput"
                                    class="form-control search-input"
                                    placeholder="Search users‚Ä¶"
                                    autocomplete="off"
                                    spellcheck="false"
                                    autocapitalize="off"
                                    autocorrect="nope"
                                    aria-label="Search users" />
                            </div>

                            <!-- User list (keyboard + click controlled by JS) -->
                            <div
                                id="userList"
                                class="aims-userpicker__list"
                                role="listbox"
                                aria-label="Available users"
                                tabindex="0">
                                <!-- user options injected by JS -->
                            </div>

                            <!-- Hidden field is the "real" form value (required for HTML5 validation) -->
                            <input type="hidden" id="userIdHidden" name="SelectedUserId" required />
                        </div>
                    </div>

                    <!-- Select Asset (hidden when opened from üë§) -->
                    <div class="mb-3" id="assetRow">
                        <label for="assetSelect" class="form-label fw-bold">Select Asset</label>
                        <div class="aimsds-controls d-flex flex-column gap-2 w-100">
                            <!-- search input injected above via JS -->
                            <select class="form-select aimsds-input" id="assetSelect" required size="8">
                                <option selected disabled value="">Choose an asset...</option>
                            </select>
                        </div>
                    </div>

                    <!-- Comment -->
                    <div class="mb-3">
                        <label for="commentBox" class="form-label fw-bold">Assignment Comment</label>
                        <textarea id="commentBox"
                                  class="form-control aimsds-input"
                                  rows="3"
                                  required
                                  placeholder="Reason for assignment (will be added to the audit log)..."></textarea>
                        <div class="invalid-feedback">
                            Please provide a brief comment for this assignment.
                        </div>
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="modal-footer aimsds-footer">
                <div class="aimsds-footer-right w-100 d-flex justify-content-between align-items-center gap-3">
                    <div class="flex-grow-1 flex-md-grow-0">
                        <label for="userAgreementUpload"
                               class="add-btn upload-btn w-100">
                            Upload Agreement ‚úíÔ∏è
                        </label>
                        <input type="file" id="userAgreementUpload" style="display:none;" />
                    </div>
                    <button type="submit"
                            form="assignAssetForm"
                            class="add-btn aimsds-primary assign-btn flex-grow-1 flex-md-grow-0">
                        Assign Asset
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>