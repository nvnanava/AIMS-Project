@* Reusable filter icon + dropdown (Bootstrap-styled) *@
@{
    var id = (ViewData["Id"] as string) ?? "filter";
    var label = (ViewData["Label"] as string) ?? "Show Archived";
    var isChecked = (ViewData["Checked"] as bool?) ?? false;
}
<div class="aims-filter dropdown d-inline-block" data-component="filter-icon" data-id="@id">
    <button class="btn btn-light border aims-filter-btn rounded-3" id="@id-btn" type="button" data-bs-toggle="dropdown"
        aria-expanded="false" aria-haspopup="true" aria-controls="@id-menu">
        <svg width="18" height="18" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M3 5h18l-7 8v5l-4 2v-7L3 5z" fill="currentColor"></path>
        </svg>
        <span class="visually-hidden">Filters</span>
    </button>

    <div class="dropdown-menu p-3 shadow aims-filter-menu" id="@id-menu" aria-labelledby="@id-btn">
        <div class="form-check m-0">
            <input class="form-check-input" type="checkbox" id="@id-toggle" @(isChecked ? "checked" : "")
                data-role="show-archived-toggle">
            <label class="form-check-label" for="@id-toggle">@label</label>
        </div>
    </div>
</div>