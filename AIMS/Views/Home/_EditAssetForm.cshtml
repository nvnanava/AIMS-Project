<div class="modal fade" id="editAssetModal" tabindex="-1" aria-labelledby="editAssetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="editAssetModalLabel">Edit Asset</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="editAssetForm" action="/Home/EditAsset" method="post">
                    
                    <div class="mb-3">
                        <label for="editTagNumber" class="form-label">Tag Number</label>
                        <input type="text" id="editTagNumber" name="tagNumber" class="form-control" placeholder="Enter Tag Number">
                    </div>

                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="markForSurvey" name="markForSurvey">
                        <label class="form-check-label" for="markForSurvey">Mark for Survey</label>
                    </div>

                    <div class="mb-3">
                        <label for="editNotes" class="form-label">Notes</label>
                        <textarea id="editNotes" name="notes" class="form-control" rows="3" placeholder="Enter remarks..."></textarea>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const editForm = document.querySelector('#editAssetModal form');
        const editToast = new bootstrap.Toast(document.getElementById("editToast"));
        const editTagInput = document.getElementById("editTagNumber");

        editForm.addEventListener('submit', function (e) {
            e.preventDefault(); // Prevent redirect

            //validate inputs here
            const tagNumber = document.getElementById("editTagNumber").value;

            if (!tagNumber) {
                editTagInput.placeholder = "Tag Number is required";
                editTagInput.classList.add("is-invalid");
                return;
            } else {
                document.getElementById("tagNumberError").style.display = "none";
            }
            // Show toast
            editToast.show();
            // Optional: reset form
            this.reset();

            // Optional: close the modal
            const modal = bootstrap.Modal.getInstance(document.getElementById("editAssetModal"));
            modal.hide();
        });
        editTagInput.addEventListener("input", function () {
            this.classList.remove("is-invalid");
            this.style.border = ""; // clears inline border
            this.placeholder = "Enter Tag Number"; // restore default
        });
    });
    //clears error warnings when new input is entered

    
</script>