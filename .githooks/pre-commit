#!/usr/bin/env bash
set -euo pipefail

dotnet tool restore >/dev/null
echo "[pre-commit] Checking EditorConfig formatting (whitespace/EOL only)â€¦"

# Verify-only: exit non-zero if files need whitespace/EOL fixes.
# We intentionally avoid style/analyzers here to prevent Roslyn load issues.
dotnet tool run dotnet-format \
  --check \
  --fix-whitespace \
  .